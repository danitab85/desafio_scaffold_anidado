<p id="notice"><%= notice %></p>

<h1>Users</h1>
<br>
<%= link_to 'New User', new_user_path, class: 'btn btn-warning' %>

<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Playlists</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.playlist.count %></td>
        <td><%= link_to 'Show', user, class: "btn btn-outline-secondary btn-sm", style: "color:magenta" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-secondary btn-sm", style: "color:cyan" %></td>
        <td><%= link_to 'Destroy', user,class: "btn btn-outline-secondary btn-sm", style: "color:orange", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
