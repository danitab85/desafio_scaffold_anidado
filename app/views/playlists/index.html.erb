<p id="notice"><%= notice %></p>

<h1>Playlists</h1>
<br>
<%= link_to 'New Playlist', new_playlist_path, class: 'btn btn-warning' %>
<br>

<table class="table mt-5">
  <thead class="thead-dark">
    <tr>
      <th>Playlist Name</th>
      <th>User</th>
      <th>Songs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.user.name %></td>
        <td><%= playlist.song.count %></td>
        <td><%= link_to 'Show', playlist, class: "btn btn-outline-secondary btn-sm", style: "color:magenta" %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist), class: "btn btn-outline-secondary btn-sm", style: "color:cyan" %></td>
        <td><%= link_to 'Destroy', playlist, class: "btn btn-outline-secondary btn-sm", style: "color:orange", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
